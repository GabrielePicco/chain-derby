{
  "name": "@chain-derby/api",
  "version": "0.1.0",
  "description": "Chain Derby API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint --ext .ts src/",
    "test": "jest",
    "migration:generate": "drizzle-kit generate",
    "migration:push": "drizzle-kit migrate",
    "migration:drop": "drizzle-kit drop --config=drizzle.config.ts",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:init": "./scripts/db-init.sh",
    "db:setup": "npm run db:start && npm run db:init"
  },
  "keywords": [
    "blockchain",
    "race",
    "api",
    "koa",
    "drizzle",
    "postgres"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.0",
    "koa": "^2.15.1",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^7.0.2",
    "koa-logger": "^3.2.1",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.7.10",
    "@types/jest": "^29.5.12",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-logger": "^3.1.5",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.11.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "drizzle-kit": "^0.21.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
